{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "services": [
    {
      "name": "web",
      "path": ".",
      "type": "node",
      "run": {
        "startCommand": "npm run start",
        "port": 3000
      },
      "env": ["NODE_ENV","PORT","DATABASE_URL","JWT_SECRET"]
    }
  ],
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
